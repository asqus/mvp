<% optionSet = ActiveSupport::JSON.decode(PollOptionsSet.find(poll.poll_options_set_id).options) %>
<% userOption = UpRelation.find_by_user_id_and_poll_id(current_user.id, poll.id) %>
<% optionSet.each do |key, value| %>
  <% if userOption != nil and userOption.answer_value.to_s() == key %>
    <%= link_to value, up_relations_answer_path(:poll_id => poll.id, :answer=> key), :remote => true, :class => "p_answer_option btn btn-primary" %>
  <% else %>
    <%= link_to value, up_relations_answer_path(:poll_id => poll.id, :answer => key), :remote => true, :class => "p_answer_option btn" %>
  <% end %>
<% end %>
<%= link_to "show poll results", up_relations_result_path(:poll_id => poll.id), :remote => true, :class => "p_answer_option btn" %>