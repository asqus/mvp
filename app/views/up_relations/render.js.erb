<% poll = @poll %>

<% if current_user.didvotepoll?(poll, true) %>
	$("#upvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/undoupvote', poll: poll) %>");
<% else %>
	$("#upvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/changeupvote', poll: poll) %>");
<% end %>

$("#stats_<%= poll.id %>").html("<%= escape_javascript(render 'polls/stats', poll: poll) %>");

<% if current_user.didvotepoll?(poll, false) %>
	$("#downvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/undodownvote', poll: poll) %>");
<% else %>
	$("#downvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/changedownvote', poll: poll) %>");
<% end %>
