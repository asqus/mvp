<% poll = @poll %>

<% if current_user.didvotepoll?(poll, true) %>
	$("#upvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/vote_states/undoupvote', poll: poll) %>");
<% else %>
	$("#upvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/vote_states/changeupvote', poll: poll) %>");
<% end %>

$("#stats_<%= poll.id %>").html("<%= escape_javascript(render 'polls/vote_states/stats', poll: poll) %>");

<% if current_user.didvotepoll?(poll, false) %>
	$("#downvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/vote_states/undodownvote', poll: poll) %>");
<% else %>
	$("#downvote_<%= poll.id %>").html("<%= escape_javascript(render 'polls/vote_states/changedownvote', poll: poll) %>");
<% end %>
