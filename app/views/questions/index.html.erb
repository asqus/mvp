<% if current_user %>

<div class="question_list">
<h1>Recent Questions</h1>

<% @questions.each do |question| %>
  <div class="q_block index">
    <div class="q_vote_form"><%= render 'vote_forms', question: question %></div>
    <div class="q_title"><%= link_to question.title, question %></div>
    <div class="q_body"><%= question.body %></div>
    <div class="q_asked_by"><h>Asked by:  </h>
        <%= link_to(User.find(question.user_id)) do %>
        <%= User.find(question.user_id).name %>
        <% end %>
    </div>
  </div>
<% end %>

<br />
<%= link_to 'New Question', new_question_path, :class => 'btn btn-large btn-primary' %>
</div>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
  <br />
  <%= link_to "Sign In", new_session_path %>
<% end %>
