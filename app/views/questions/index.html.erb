<% if current_user %>

<div class="question_list">
<h1>Recent Questions</h1>

<%= link_to 'Sort by Popularity', questions_reorder_path(:state => 1), :remote => true, :class => "p_answer_option btn" %>
<%= link_to 'Sort by Most Recent', questions_reorder_path(:state => 2), :remote => true, :class => "p_answer_option btn" %>
<% questionList = Question.order('rank_value DESC') %>
<div id="questions">
  <%= render 'questionBlock', :questions => questionList %>
</div>

<br />
<%= link_to 'New Question', new_question_path, :class => 'btn btn-large btn-primary' %>
</div>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
  <br />
  <%= link_to "Sign In", new_session_path %>
<% end %>
